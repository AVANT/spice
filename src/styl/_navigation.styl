//-----
// LOGO
//-----

.logo-link-wrapper
	display: block
	position: fixed
	z-index: 200
	cursor: pointer
	top: 16px
	left: 16px
	width: 64px
	height: 64px

	.logo-link
		display: block

		.logo
			width: 64px
			display: block
			margin: 0 auto
			transition: width t0

			path
				transition: all t0

			#a
				fill: white

			#circle
				fill: none

			#fill
				fill: bw1
				opacity: 0.1

			&:hover
				#a
					fill: bw1

				#circle
					fill: none

				#fill
					fill: white
					opacity: 0.5

		&.open
			.logo
				#a
					fill: bw1

				#circle
					fill: none

				#fill
					fill: white

				&:hover
					#a
						fill: bw1

					#circle
						fill: none

					#fill
						fill: white
						opacity: 0.5


.cover
	margin: 90px 0 0 90px
	width: calc(100% - 480px)
	min-height: 500px
	transition: all 0.1s ease-in-out

.site-wrapper
	transition: left 0.1s ease-in-out
	left: 0px

	.meta-block .breadcrumbs
		display: none

	.breadcrumbs
		position: absolute

		.bc-underline
			border-bottom: 2px solid white
			padding-bottom: 0.3rem

			a
				transition: color t0
				line-height: 4rem
				font-size: f22

				&:hover
					color: bw5

			.bc-title
				font-size: 2.2rem

	.breadcrumbs,
	.splash-spacer
		width: 76%
		text-align: center
		transition: margin 0.1s ease-in-out

	.breadcrumbs
		margin: 3rem 12%

	.splash-spacer
		padding: 0.5rem 0 4.5rem 0
		margin: 1.2rem 12%

	&.open
		left: 250px

		.bc-title. breadcrumbs
			left: 250px

		.bc-top .breadcrumbs
			margin: 3rem calc(12% - 250px)

		.breadcrumbs
			margin: 3rem calc(12% - 250px)

		.splash-spacer
			margin: 1.2rem calc(12% - 250px)

		.cover
			width: calc(100% - 730px)

		.meta-wrapper
			left: calc(100% - 590px)

		.single-wrapper-solo,
		.taxonomy-wrapper,
		.list-wrapper
			h2
				margin: 0.15em 0 0 calc(4em - 250px)
				opacity: 0

	.single-wrapper-solo,
	.taxonomy-wrapper,
	.list-wrapper
		h2
			position: absolute
			margin: 0.15em 0 0 4em
			opacity: 1
			transition: all .1s ease-in-out



@media (max-width: large-width)
	.site-wrapper
		.single-wrapper-solo,
		.taxonomy-wrapper,
		.list-wrapper
			h2
				margin: 0.3em 0 0 4em
				opacity: 1
				transition: all .1s ease-in-out

	.site-wrapper.open
		.single-wrapper-solo,
		.taxonomy-wrapper,
		.list-wrapper
			h2
				margin: 0.3em 0 0 calc(4em - 250px)
				opacity: 0


