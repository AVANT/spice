// MENU
//-----

.nav-wrapper
	z-index: 100
	overflow: hidden
	box-sizing: border-box
	padding-right: 1em
	padding: 0
	bottom: 0
	top: 0
	left: 0
	right: 0
	margin: 0
	padding: 0
	height: 100% !important
	width: 100% !important
	z-index: -50
	position: fixed

	&.open
		z-index: 10

		.nav
			margin-left: 0px

			.nav-overlay
				left: 0

		.nav-background
			position: absolute
			z-index: 0
			width: 100%
			height: 100%

	.nav
		z-index: 1
		display: block
		margin-left: -250px
		height: 100%
		width: 250px
		transition: margin-left 0.1s ease-in-out
		min-height: 550px
		overflow-y: auto

		.nav-fill
			background: bw1
			opacity: 0.98
			width: 100%
			height: 100%
			position: relative
			z-index: -1
			border: 1px solid bw2

		.nav-background
			position: fixed
			z-index: 0
			width: 0
			height: 0

		.nav-overlay
			z-index: 2
			margin: 105px 0 0 0
			width: 250px
			height: 100%
			position: absolute
			top: 0
			left: -250px
			transition: left 0.1s ease-in-out

			ul
				margin: 1.5rem 1rem
				display: inline-block

				li
					list-style-type: none
					transition: background t0
					transition: border t0
					background: rgba(255, 255, 255, 0)

					a
						text-decoration: none
						margin: 0
						transition: color t0
						color: white
						font-weight: 500
						font-size: f14
						text-decoration: none
						display: block

			.nav-links
				padding-left: 0.2em

				.nav-home
					margin: 0
					width: 100%
					//text-transform: uppercase

					li a
						font-size: f17
						// font-variant: small-caps
						padding: 0

				.nav-imprint
					margin-top: 0

				.nav-objects li a
					font-size: f13
					font-family: headline
					text-transform: uppercase
					font-variant-caps: small-caps

				ul
					display: inline-block
					margin: 0.4rem 4rem 0.4rem 0
					padding: 0 0 0 2.4rem

					li
						margin: 0

						a
							color: white
							padding: 0.25rem 0.35rem 0.35rem 0
							font-family: headline
							font-weight: 600

							&:hover
								color: bw5

				.nav-spacer
					height: 0
					width: 2px
					border-top: 2px solid bw5
					margin: 0.5rem 0 0.5rem 2.5rem

			.nav-social
				text-align: center
				margin: 0 auto
				width: 100%
				position: absolute
				bottom: 10.4rem

				.social-link-wrapper
					display: inline

					.social-link
						color: white
						text-decoration: none
						display: inline
						margin: 0 0.65em

						.social-link-icon
							transition: color t0

							&:hover
								color: bw5

			.nav-newsletter
				position: absolute
				margin: 0 auto
				width: 100%
				height: 4rem
				bottom: 13.8rem
				z-index: 5

				.newsletter-signup
					background: none
					height: 100%
					margin: 20px
					margin-top: 10px

				form
					overflow: auto
					margin: 0 auto !important
					width: 180px
					border: 0
					border-bottom: 2px solid white

					.honeypot
						position: absolute
						left: -5000px

				input
					-webkit-appearance: none
					border-radius: 0

					&[type='email']
						height: 3.2rem
						background: none
						vertical-align: middle
						float: left
						width: 95%
						font-family: headline
						font-weight: 600
						font-size: f14
						color: white
						outline: none
						border: 0
						padding-left: 10px
						text-align: center

					+placeholder()
						text-align: center
						color: white

					&.button
						text-align: center
						font-size: 1.1em
						height: 100%
						width: 5%
						padding: 8px 0 0 0
						vertical-align: middle
						border-left: 0
						color: white
						font-weight: 600
						background: none
						outline: none
						box-shadow: none
						font-family: 'FontAwesome'
						border: 0

						&:hover
							color: bw5
							background: none
							outline: none

// SMALL-WIDTH
@media (max-width: small-width)
	.site-wrapper
		transition: left 0s ease-in-out

		.breadcrumbs
			width: 80%
			transition: none !important
			margin: 1.4rem 10% !important

			.bc-underline
				font-size: f20

				a
					font-size: f20

		&.open  // freeze small-width site
			overflow: hidden
			left: 100%
			transition: none

			.cover
				width: 100% !important

			.meta-wrapper
				right: 0 !important

	.nav-wrapper
		display: none

		&.open
			position: absolute
			bottom: 0
			top: 0
			left: 0
			right: 0
			margin: 0
			padding: 0
			height: 100%
			width: 100%
			display: block

		.nav
			display: block
			margin: 0
			left: 0
			top: 0
			height: 100%
			width: 100%

			.nav-overlay
				width: 100%
				margin-top: 85px !important

				.nav-newsletter
					z-index: 2
					margin: 0
					width: 180px
					display: block
					left: calc(50% - 90px)
					position: absolute

				.nav-social
					position: absolute


// LARGE-WIDTH
@media (max-width: large-width)
	.site-wrapper

		.meta-wrapper,
		.breadcrumbs,
		.splash-spacer
			transition: left 0.1s ease-in-out, margin 0.1s ease-in-out
			left: 0

		.breadcrumbs
			width: 80%
			transition: none !important
			margin: 2rem 10% !important

			.bc-underline
				font-size: f20

				a
					font-size: f20

		.bc-top
			display: none

		.meta-block .breadcrumbs
			position: relative !important
			display: block

			.bc-underline
				border-bottom: 0 !important

				a
					border-bottom: 0
					box-shadow: none


		&.open
			.splash-spacer,
			.breadcrumbs
				left: 250px !important

			.meta-wrapper
				left: 0 !important

			.splash-spacer,
			.meta-wrapper
				margin: 1.5rem auto !important

	.logo-link-wrapper
		top: 13px
		left: 13px
		width: 52px
		height: 52px

		.logo-link .logo
			width: 52px