//-----
// LOGO
//-----

.logo-link-wrapper
	display: block
	position: fixed
	z-index: 200
	cursor: pointer
	opacity: 0.95
	top: 16px
	left: 16px
	width: 45px
	height: 45px


	.logo-link
		display: block
		border: 1px solid bw1
		transition: border t0
		fill: bw1
		transition: all t0
		background: none

		&.open,
		&:hover
			fill: white
			background: bw1
			border: 1px solid white

.site-wrapper
	transition: margin-left .1s ease-in-out
	margin-left: 0px

.site-wrapper.open
	margin-left: 250px

	.cover
		width: -webkit-calc(62% - 250px)
		width: -moz-calc(62% - 250px)
		width: calc(62% - 250px)


// LOGO SMALL-WIDTH
@media (max-width: small-width)
	.site-wrapper.open  // freeze small-width site
		overflow: hidden
		margin-left: 0

		.cover
			width: 100% !important

	// iOS hover fix
	.logo-link-wrapper .logo-link
		&:hover
			border: 1px solid bw1
			fill: bw1
			background: none

		&.open
			border: 1px solid white
			fill: white
			background: none

			&:hover
				border: 1px solid white
				fill: white
				background: none

	// defaults
	.logo-link-wrapper.no-touch .logo-link
		&:hover
			border: 1px solid bw1
			fill: white
			background: bw1

		&.open
			border: 1px solid white
			fill: white
			background: none

			&:hover
				border: 1px solid white
				fill: bw1
				background: white


//-----
// MENU
//-----

.nav-wrapper
	z-index: 100
	overflow: hidden
	box-sizing: border-box
	padding-right: 1em
	padding: 0
	position: fixed
	bottom: 0
	top: 0
	left: 0
	right: 0
	margin: 0
	padding: 0
	height: 100% !important
	width: 100% !important
	z-index: -50

	&.open
		z-index: 1

		.nav
			margin-left: 0px

		.nav-background
			position: fixed
			z-index: 0
			width: 100%
			height: 100%

	.nav
		z-index: 1
		position: fixed
		display: block
		margin-left: -250px
		height: 100%
		width: 250px
		transition: margin-left 0.1s ease-in-out

		.nav-fill
			background: bw1
			opacity: 0.98
			width: 100%
			height: 100%
			position: absolute
			z-index: -1
			border: 1px solid bw2

		.nav-background
			position: fixed
			z-index: 0
			width: 0
			height: 0

		.nav-overlay
			z-index: 2
			height: 100%
			margin: 80px 16px 16px 16px

			ul
				margin: 1.5em 1em
				display: inline-block

				li
					list-style-type: none
					transition: background t0
					transition: border t0
					background: rgb(237, 237, 237)
					background: rgba(255, 255, 255, 0)

					a
						text-decoration: none
						margin: 0
						transition: color t0
						color: white
						font-weight: 500
						text-decoration: none
						display: block

			// BREADCRUMBS
			.nav-breadcrumbs
				list-style-type: none
				overflow: hidden
				text-align: left
				width: calc(100% - 1.2em)
				font-size: 1.1em
				word-wrap: break-word
				margin: 0 0 0 1.2em

				li
					font-family: headline
					font-weight: 600
					word-break: keep-all
					display: inline-block

					a
						transition: color t0
						font-weight: 700

						&:hover
							color: bw5

				.nav-parent
					a
						text-transform: capitalize

				.nav-title
					line-height: 1.6em

				.nav-slash
					color: bw9
					display: inline-block
					font-size: 0.9em
					font-family: headline
					font-weight: 800
					top: -0.1em
					position: relative
					margin: 0.2em

			.nav-links
				transform: translateY(5%)
				height: 100%

				ul
					margin: 0 1em

					li

						a
							color: white
							padding: 0.25em 0.35em 0.35em 0.35em
							font-size: 0.9em
							font-family: headline
							font-weight: 600

							&:hover
								color: bw5

			.nav-social
				text-align: center
				margin: 0 auto
				width: calc(100% - 32px)
				position: absolute
				bottom: 1.5em
				font-size: 0.9em

				.social-link-wrapper
					display: inline

					.social-link
						color: white
						text-decoration: none
						display: inline
						margin: 0 0.65em

						.social-link-icon
							transition: color t0

							&:hover
								color: bw5

			.nav-newsletter
				position: absolute
				margin: 0 auto
				width: calc(100% - 32px)
				bottom: 3.5em

			.newsletter-signup
				background: none
				height: 100%
				margin: 20px
				margin-top: 10px

			form
				overflow: auto
				margin: 0 auto !important
				width: 180px
				border: 0
				border-bottom: 1px solid white

			input
				-webkit-appearance: none
				border-radius: 0

				&.button
					text-align: center
					font-size: 1.1em
					height: 2.9em
					width: 5%
					float: right
					padding: 2px
					vertical-align: middle
					border-left: 0
					color: white
					font-weight: 600
					background: none
					outline: none
					-webkit-box-shadow: none
					box-shadow: none
					font-family: 'FontAwesome'
					border: 0

			input[type='text'],
			input[type='email']
				height: 3.8em
				border: 0
				background: none
				vertical-align: middle
				float:left
				width: 95%
				font-family: headline
				font-weight: 600
				font-size: 0.8em
				color: white
				transition: all 0.2s ease-in-out
				text-align: center
				outline: none
				padding-left: 10px

			input.button
				&:hover,focus
					color: bw5
					background: none
					outline: none

			input[type='text']:focus
				display: none

			placeholder
				color: white

				&:hover
					color: bw5


// MENU SMALL-WIDTH
@media (max-width: small-width)
	.nav-wrapper
		display: none

		&.open
			position: fixed
			bottom: 0
			top: 0
			left: 0
			right: 0
			margin: 0
			padding: 0
			height: 100%
			width: 100%
			display: block

			.nav
				transform: translateY(0%)

		.nav
			transform: translateY(0%)
			z-index: 1
			position: fixed
			display: absolute
			margin: 0
			right: 0
			top: 0
			height: 100%
			width: 100%

			.nav-overlay
				padding-top: 0
				margin: 1em !important

				.nav-breadcrumbs
					text-align: center
					margin: 14px 0
					width: 100%

					a
						font-size: 1.3em
						font-weight: 700
						margin: 0
						padding: 0

					.nav-home
						margin-left: 1em

					.nav-title
						margin-top: 1.4em

					.nav-slash a
						font-weight: 800

				.nav-links
					transform: translateY(2%)
					text-align: center

					ul
						margin: 0

						li
							margin:0

							a
								font-size: 1.2em
								padding: 0.1em 0.2em 0.2em 0.2em

				.nav-newsletter
					bottom: 3.7em

				input[type='text'],
				input[type='email']
					height: 3.6em
					font-size: 1em

				input.button
					font-size: 1.4em
					height: 2.7em
