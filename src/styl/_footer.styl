.nav-newsletter
	position: absolute
	height: 4rem
	bottom: 2rem
	z-index: 5
	display: block

	.newsletter-signup
		background: none
		height: 100%
		margin: 20px
		margin-top: 10px

	form
		overflow: auto
		margin: 0 auto !important
		width: 180px
		border: 0
		border-bottom: 2px solid bw1

		.honeypot
			position: absolute
			left: -5000px

	input
		-webkit-appearance: none
		border-radius: 0

		&[type='email']
			height: 4rem
			background: none
			vertical-align: middle
			float: left
			width: 90%
			font-family: headline
			font-weight: 600
			font-size: f14
			color: bw1
			outline: none
			border: 0
			padding: 0 0 0 2px
			text-align: left

		+placeholder()
			text-align: left
			color: bw1

		&.button
			text-align: left
			font-size: 1.1em
			height: 100%
			width: 10%
			padding: 8px 0 0 0
			vertical-align: middle
			border-left: 0
			color: bw1
			font-weight: 600
			background: none
			outline: none
			box-shadow: none
			border: 0

			&:hover
				color: bw5
				background: none
				outline: none

@media (max-width: small-width)
	.nav-newsletter
		z-index: 2
		margin: 0
		width: 180px
		display: block
		left: calc(50% - 90px)
		position: absolute
