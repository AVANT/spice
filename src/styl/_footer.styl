footer
	padding: 2em
	width: 100%
	bottom: 0
	left: 0
	text-align: center

	.social-link
		color: bw1
		text-decoration: none
		display: inline
		margin: 0 1em

.foot-wrapper
	width: 100%
	height: 0
	padding: 0
	margin: 3em 0 0 0
	font-family: headline
	font-size: 0.9em
	line-height: 2em
	font-weight: 600
	color: bw1
	transform-style: preserve-3d
	bottom: 0
	margin: 0 auto 0
	opacity: 0
	transition: opacity 0.3s ease-in

	.foot-border
		border-top: solid 2px white
		margin: 0 3rem
		height: 0

	.foot
		position: relative
		height: 100%
		margin: 2em 3em

		a
			color: bw1
			vertical-align: baseline
			transition: all 0.2s ease
			display: block
			text-align: right

			&:hover
				color: bw5

		.foot-links
			position: absolute
			color: bw1
			right: 0
			top: 1rem

		.foot-social
			position: absolute
			bottom: 0.8rem
			color: bw1
			display: block
			text-align: right
			width: 100%

			a
				display: inline
				margin: 0 8px

				&:first-child
					margin-left: 0

				&:last-child
					margin-right: 0

		.foot-logo
			width: 76px
			position: absolute
			display: block
			left: calc(50% - 38px)
			bottom: calc(50% - 34px)
			margin: 0

			#a
				fill: #e3e3e3

			#circle
				fill: none

			#fill
				fill: white

		.foot-license
			position: absolute
			color: bw1
			left: 0
			bottom:	calc(50% - 38px)

			a
				box-shadow: none !important

		.foot-cc-wrap

			.foot-cc
				color: bw1
				font-size: 1.8em
				margin-top: 0.7em
				width: 1em
				padding: 0.1em

				circle
					fill: none
					transition: all 0.2s ease

				path
					fill: bw1
					transition: all 0.2s ease

			&:hover

				path
					fill: bw5


	//------------
	// small width
	//------------

	@media (max-width: small-width)
		.foot
			.foot-links
				top: 0

			.foot-logo
				width: 60px
				left: calc(50% - 30px)

			.foot-social
				margin: 0 auto
				width: 100%
				text-align: center
				bottom: 2rem
