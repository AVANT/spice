.foot-wrapper
	width: 100%
	height: 0
	padding: 0
	margin: 3em 0 0 0
	font-family: headline
	font-size: 0.9em
	line-height: 2em
	font-weight: 600
	color: white
	background-color: bw1
	transform-style: preserve-3d
	bottom: 0
	margin: 0 auto 0
	opacity: 0
	transition: opacity 0.3s ease-in

	.foot
		position: relative
		top: 50%
		transform: translateY(-50%)
		margin: 25px

		a
			color: bw5
			position: relative
			vertical-align: baseline
			transition: all 0.2s ease
			display: block
			text-align: right

			&:hover
				color: white

		.foot-links
			position: absolute
			color: bw5
			right: 0
			bottom: 2em

		.foot-social
			position: absolute
			color: bw5
			margin-top: 7em
			display: block
			text-align: right
			width: 100%

			a
				display: inline
				padding: 8px
				margin: 2px

		.foot-logo
			width: 55px
			background: bw5
			fill: bw1
			display: block
			margin: 0 auto

		.foot-license
			position: absolute
			color: bw5
			text-align: left

			a
				box-shadow: none !important

		#foot-cc
			color: bw5
			font-size: 1.8em
			transition: all 0.2s ease
			margin-top: 0.7em

		#foot-cc:hover
			color: white


		//------------
		// SMALL WIDTH
		//------------

		@media (max-width: small-width)
			.foot-logo
				margin-bottom: 8em

			.foot-links
				bottom: 3.5em

			.foot-social
				margin: 8em auto 0 auto
				width: 100%
				text-align: center
