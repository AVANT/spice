.pagination
	overflow: hidden
	margin-top: 40px
	color: bw8
	text-align: center
	border: 1px solid bw9

	a,
	span
		box-sizing: border-box
		float: left
		width: 50%
		padding: 20px
		text-decoration: none

		&:first-child
			text-decoration: none
			border-right: 1px solid bw9

.item-title
	margin 2em 0 0 4em

#home
	min-height: 70%
	width: calc(100% - 74px)
	margin-left: 36px

	*
		box-sizing: border-box

	.items
		top: 100px
		height: auto
		margin: 0 auto
		position: relative

		&:after
			content: ' '
			display: block
			clear: both

		.post-sizer,
		.post
			width: 1200px

		.post
			float: left
			display: block
			margin: 0

			&:hover
				z-index: 6

			a
				color: bw1
				text-decoration: none
				margin: 0
				display: block

				.p-wrap-border
					display: none

				.p-wrap
					font-family: headline
					position: relative
					transition: background-color t0
					padding: 2.3rem 3.7rem

					&:hover
						background-color: white
						z-index: 5

					.list-title
						font-weight: 700
						font-size: f20
						color: bw1
						margin: 0 0.5rem 2rem 0.5rem

					.list-author 
						font-weight: 600
						text-align: right
						display: block
						margin: 1.9rem 0 0 0

						p
							margin: 0
							font-size: f16
							line-height: 1.4em

					.list-img-wrapper .list-cover
						width: 100%

		.project
			width: 380px
			margin-top: 0

			&:first-child
				margin-top: 0px

			&:last-child
				margin-bottom: 0

			a
				.p-wrap-border
					width: 100%
					height: 100%
					box-shadow: inset 0 0 0 2px white
					opacity: 0.85
					top: 0
					left: 0
					position: absolute
					display: block
					z-index: 5
					background-color: rgba(255, 255, 255, 0)
					transition: background-color t0
					box-sizing: content-box

				&:hover
					.p-wrap-border
						z-index: 5
						opacity: 1

					.p-wrap
						background-color: rgba(255, 255, 255, 1)
						z-index: 6

				.p-wrap
					z-index: 4
					background-color: rgba(255, 255, 255, 0)

		.event,
		.artifact,
		.gallery
			width: 380px
			z-index: 1

		.event a
			background-color: rgba(200, 200, 200, 0.65)

		.artifact a
			background-color: rgba(255, 255, 255, 0.65)

		.gallery a
			background-color: rgba(160, 160, 160, 0.65)


// LARGE-WIDTH
@media (max-width: large-width)
	#home
		margin: 0 auto
		width: 100%

		.items
			top: 65px
			left: 0
			margin: 0 auto !important
			width: calc(100% - 5.5rem) !important
			height: 100% !important
			max-width: 600px

			.post
				width: 100% !important
				margin: 1.5rem auto !important
				position: static !important

				a
					.p-wrap-border
						display: none

			.project
				.p-wrap
					box-shadow: inset 0 0 0 2px #fff

// SMALL-WIDTH
@media (max-width: small-width)
	#home .items .post a .p-wrap
		padding: 2rem 3rem

		.list-title
			margin: 0 0.5rem 2rem 0.5rem
			font-size: f18

		.list-author
			margin: 1.5rem 0.5rem 0 0.5rem

			p
				font-size: f14

//-------------------------------
// infinite scroll load animation
//-------------------------------

.index .spinner
	bottom: -62px !important

.spinner
	position: absolute
	bottom: -62px
	width: 100%
	text-align: center
	z-index: 6

	&.load
		bottom: -92px
		margin-top: 40px

	.bounce1
		animation-delay: -0.32s

	.bounce2
		animation-delay: -0.16s

	& > div
		width: 6px
		height: 8px
		margin: 0 5px;
		background-color: bw1
		display: inline-block
		animation: sk-bouncedelay 1.4s infinite ease-in-out both

@keyframes sk-bouncedelay
	0%, 80%, 100%
		transform: scale(0)
	40%
		transform: scale(1)

@media (max-width: large-width)
	.spinner
		width: 100%