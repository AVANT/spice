.center
	width: 100%
	clear: both
	display: block

.center-inner
	margin: 0 auto

	*
		max-width: default-width-inner
		margin-left: auto
		margin-right: auto

	p:last-child
		margin-bottom: 0

p
	hanging-punctuation: first

html[lang="zh-Hans"]
	text-align: justify
	hanging-punctuation: allow-end

.single-wrap
	width: 100%
	z-index: -2

	.text-body
		a
			color: bw1
			word-break: break-word
			underline: bw8 white

	.feat
		text-align: center

		.popup
			display: inline-block
			position: relative
			top: 0.7em
			font-size: 130%
			text-align: center
			text-decoration: none
			padding: 0 1em

	.share
		text-align: right

	ul
		padding-left: 2rem
		list-style-type: circle

	ul,
	ol
		margin: 2em auto

		li
			margin-bottom: 1rem

			.block-inner
				font-size: f14
				margin-bottom: 1rem

		ul li
			margin-left: 2rem
			list-style: square

	.block
		ul,
		ol
			margin: 1em auto 0.2em auto

			li
				margin-left: 1rem
				padding-left: 0.3em
				font-size: f12
				font-weight: 600

				&:last-child
					margin-bottom: 0

@media (max-width: small-width)

	.single-wrap .feat .popup
		font-size: 150%

.spacer
	text-align: center
	display: block
	margin: 35px auto 42px auto
	width: 140px
	text-align: center

	.space
		display: block
		margin: 0 auto
		letter-spacing: 1em
		font-size: f14
		text-align: center
		padding-left: 14px

@media (max-width: large-width)
	.center-inner
		margin: 0 auto
		width: large-width-inner

@media (max-width: small-width)
	.center-inner
		margin: 0 5%
		width: small-width-inner

	.list-wrap .single-content
		padding-bottom: 3.5em

	.single-wrap .feat .popup
		font-size: 150%


//-----------
// ANNOTATION
//-----------

sup,
sub
	line-height: 1
	height: 0
	position: relative
	vertical-align: baseline
	_vertical-align: bottom
	font-size: 75%
	hyphens: none

sup
	top: -.5em

sub
	bottom: -.25em

.foot-hr
	margin: 5rem auto 3rem auto
	border-style: solid
	border-color: bw1

// body anchor
.footnote-ref a
	text-decoration: none
	color: blue0 !important
	padding: 0
	font-weight: 500
	box-shadow: none !important

// footnote anchor
.footnote-return
	text-decoration: none
	font-size: 90%
	font-weight: 700 !important
	top: -.1em !important
	line-height: 0
	position: relative
	vertical-align: baseline

	a
		color: blue0 !important
		font-weight: 700 !important
		box-shadow: none !important

.footnote-ref,
.footnote-return
	a:hover
		box-shadow: none !important
		color: bw1 !important

.single-wrap
	.footnotes
		padding: 0

		&,
		a,
		p,
		ol li,
		ul li
			font-family: headline
			font-weight: 500
			color: bw1
			font-size: f13

		h3
			margin-top: 1.5rem

		a
			color: bw1

		hr
			display: none

		ol,
		ul
			padding-left: 1.7rem
			margin: 1rem 0

			li
				padding-left: 0.2rem
				font-size: f13
				margin-bottom: 0.5rem

				p
					font-size: f13
					margin: 0
					margin-bottom: 0.5rem

		ul li + li
			padding-top: 0.4rem

		.block
			font-size: f13

legend
	border: 0
	padding: 0

.box
	margin: 10px
	font: 16px 'Courier New'
	background-color: white
	color: bw9
	margin: 5px 0 0 15px
	padding: 5px 10px
	width: auto

.caption
	font-size: 0.9em
	padding: 1em
	font-family: headline
	font-weight: 500
	color: bw4
	margin: 0 auto

::after,
::before
	box-sizing: border-box

small
	font-size: 60%

li
	font-size: f14
	font-family: text
	font-weight: 500


//--------------
// PAGE ELEMENTS
//--------------

.single-wrap
	.block
		font-size: f16
		font-family: text
		font-weight: 600
		color: bw1
		border-left: 6px solid bw1
		padding: 0 0 0.1em 1.4em
		margin: 1.5em auto

		a
			underline: bw8 white

		p
			margin: 0.5em 0 0.5em 0
			line-height: 155%
			padding-left: 0 !important
			padding-right: 0 !important

		p + p
			margin: 0.8em 0 0 0


	.article-button
		color: white !important
		background: bw1
		border: solid 1px bw1
		transition: background t0, border t0
		margin: 0 auto
		padding: 8px 9px 9px 9px
		font-size: f13
		text-decoration: none
		box-shadow: none
		font-weight: 700
		line-height: 1.2rem
		box-shadow: none !important

		&:hover
			background: bw8
			border: solid 1px bw8
			color: bw1 !important

.block-inner
	line-height: 165%
	text-align: right

	p,a
		font-size: f14

	p
		margin: 0.5em 0 0 0

		a
			font-size: 1em

@media (max-width: large-width)
	.single-wrap .block
		margin-left: 0

table
	tr,
	th
		text-align: left

blockquote
	font-size: 1.8em
	font-family: headline
	font-weight: 800
	padding: 0 0 0 0
	margin: 1em 5% 1.5em 5%
	color: rgba(0, 0, 0, 0)
	text-stroke: 1px bw1

	p
		margin: 0
		line-height: 1.5em

