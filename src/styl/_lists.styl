.items
	overflow: hidden
	width 100%

.items li
	display: block
	margin: 0em auto
	width: 50%
	
@media (max-width:642px)
	.items li
		width: 90%
		margin 1em auto

.items li .p-wrap
	padding: 2.5em
	transition: all .15s ease-in
	border: solid 1px bw2
	font-family: headline

.items li .p-wrap .list-title
	font-weight: 700
	font-size: 1.5em
	margin: 0 0 1em 0

.items li .p-wrap .list-author 
	font-weight: 500
	font-size: 1.2em
	text-align: right
	display: block
	margin-top: 2em

.items li .p-wrap .list-author p
	margin: 0.5em 0 0 0

.items li .p-wrap:active
.items li .p-wrap:hover
	background: bw9

@media (max-width:942px)
	.items li .p-wrap:hover::after
		content: none
		margin: 0

@media (max-width:942px)
	.items li .p-wrap
		padding: 2em

@media (max-width:942px)
	.items li time
		display: block

.items li a
	color: bw1
	text-decoration: none
	margin: 4em 0
	display: block

	.list li a
		margin 2em 0
#posts
	margin-top: 20px

.taxonomy-list
	margin-bottom: 5em
	min-height: 300px

//-------------------------------
// infinite scroll load animation
//-------------------------------

.spinner
	margin: 0px auto 0
	width: 70px
	text-align: center

.spinner > div
	width: 6px
	height: 8px
	margin: 0 5px;
	background-color: bw1
	display: inline-block
	animation: sk-bouncedelay 1.4s infinite ease-in-out both

.spinner .bounce1
	animation-delay: -0.32s

.spinner .bounce2
	animation-delay: -0.16s

@keyframes sk-bouncedelay
	0%, 80%, 100%
		transform: scale(0)
	40%
		transform: scale(1)
