//----
// NAV
//----

nav
	display: block
	height: 100%

[hidden],
template
	display: none

//-----
// MENU
//-----

.logo
	width: 2.5em
	opacity: 0.9
	margin: 1em 0 0 0.8em

.menu .bio h1 a
	text-decoration: none

.menu-icon
	position: fixed
	top: 0.4em
	left: 0.4em
	cursor: pointer
	z-index: 200
	width: 2em
	height: 2em
	display: block

.menu-icon:hover
	opacity: 1


//-----
// MENU
//-----

.menu
	z-index: 100
	opacity: 0
	position: fixed
	width: 100%
	max-width: 385px
	left: -385px
	top: 0.6em
	bottom: 0.5em
	margin: 0
	overflow: hidden
	box-sizing: border-box
	padding-right: 1em

.menu .transition (.toggled)
	transition: left 2s ease-in-out
	transition: opacity 3s ease-in-out

.menu.toggled
	opacity: 1
	left: 0.5em
	padding: 0

@media (max-width:399px)
	.menu.toggled
		bottom: 0
		top: 0
		left: 0
		right: 0
		margin: 0
		padding: 0 0 2em 0

.menu.toggled .menu-fill
	background: white
	opacity: 0.9
	width: 100%
	height: 100%
	position: absolute
	z-index: -1

.menu-overlay
	padding: 1em
	z-index: 2
	height: 63%

.menu nav h6
	text-align: left
	margin-top: 2em
	margin-bottom: 1em
	color: bw3
	padding-bottom: .5em
	border-bottom: 1px solid bw9

.menu nav ul li
	list-style-type: none
	margin-bottom: 1em 0 1em 0

.menu nav ul li a
	text-decoration: none
	padding: 4px 12px 6px 12px
	margin: 0
	color: bw1
	text-decoration: none
	display: block

.menu nav .nav-items li a,
.menu nav .nav-meta li a,
.menu nav .nav-imprint li a
	margin-bottom: 1.5em

.menu nav .nav-items li a:hover,
.menu nav .nav-meta li a:hover,
.menu nav .nav-imprint li a:hover
	color: white
	background: bw1

// breadcrumbs
.nav-breadcrumbs
	list-style-type: none
	margin: auto
	overflow: hidden
	white-space: nowrap
	margin: 3em auto 0
	text-align: center
	font-weight: 700

.nav-breadcrumbs li
	font-family: headline
	font-weight: 700

.nav-home
	display: inline-block
	font-size: 1.2em

.nav-parent
	display: inline-block
	font-size: 1.2em

.nav-parent a
	text-transform: capitalize

.nav-title
	white-space: normal
	display: block
	padding: 0 2.3em
	line-height: 1.6em

.nav-slash
	display: inline-block
	font-size: 1.1em
	font-family: headline
	font-weight: 700

.nav-items,
.nav-meta,
	margin-top: 1em
	text-align: center

.nav-items,
.nav-meta
	margin: 2em auto
	display: inline-block
	padding: 0 1em

.nav-items a,
.nav-meta a,
	font-size: 1.1 em
	font-weight: 500

.nav-link-box
	text-align: center
	margin: 0em 1em 0em 1em
	position: relative
	top: 45%
	transform: translateY(-45%)


//-----------
// NEWSLETTER
//-----------

.nav-newsletter
	position: absolute
	margin: 0 auto
	width: 90%
	bottom: 5em

.newsletter-signup
	background: none
	height: 100%
	margin: 20px
	margin-top: 10px

form
	overflow: auto
	margin: 0 auto !important
	width: 180px
	border: 0
	border-bottom: 1px solid bw8

input
	-webkit-appearance: none
	border-radius: 0

input.button
	text-align: center
	font-size: 1em
	height: 2.5em
	width: 5%
	float: right
	padding: 2px
	vertical-align: middle
	border-left: 0
	color: bw7
	font-weight: 600
	background: none
	outline: none
	-webkit-box-shadow: none
	box-shadow: none
	font-family: 'FontAwesome'
	border: 0

input.button:hover
	color: bw1

input.button:focus
	background: none
	outline: none

input[type='text'],
input[type='email']
	height: 2.8em
	border: 0
	background: none
	vertical-align: middle
	float:left
	width: 95%
	font-weight: 600
	font-size: 0.8em
	color: bw7
	transition: all 0.2s ease
	text-align: center

input[type='email']:focus
	outline: none

input[type='text']:focus
	display: none

:-moz-placeholder
	color: bw8

::-moz-placeholder
	color: bw8
	opacity: 1

::-webkit-input-placeholder
	color: bw8

:-ms-input-placeholder 
	color: bw8

:-moz-placeholder:hover
	color: white

::-moz-placeholder:hover
	color: white
	opacity: 1

::-webkit-input-placeholder:hover
	color: white

:-ms-input-placeholder:hover
	color: white

//-------------
// SOCIAL ICONS
//-------------

#nav-social
	text-align: center
	margin: 0 auto
	position: absolute
	bottom: 2em
	width: 90%

#nav-social div
	display: inline

.social-link
	text-decoration: none
	display: inline
	margin: 0 1em

.social-icon
	color: black
	display: inline

.fa-twitter:hover
	color: bw5

.fa-facebook:hover
	color:  bw5

.el-instagram
	font-size: 0.8em

.el-instagram:hover
	color: bw5

.el-rss
	font-size: 0.8em

.el-rss:hover
	color: bw5

.fa-file-text-o
	font-size: 0.9em 

.fa-file-text-o:hover
	color: bw5

.fa-github:hover
	color: bw5
