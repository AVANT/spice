// --------
// DEFAULTS
// --------

*
	box-sizing: border-box
	margin: 0
	padding: 0
	-webkit-tap-highlight-color: rgba(0,0,0,0)


main,
article,
aside,
details,
footer,
figure,
header,
ul,
a,
li,
ol,
div,
a,
span,
hgroup,
section,
.media-box .media-text,
summary
	::selection
		background-color: bw2
		color: white

	::-moz-selection
		background-color: bw2
		color: white

blockquote
	::selection
		background-color: bw2
		color: white
		text-stroke: 1px bw2

	::-moz-selection
		background-color: bw2
		text-stroke: 1px bw2
		color: white

.nav *,
.foot *,
.init,
.splash-spacer,
img,
.img
	::selection
		background-color: transparent

	::-moz-selection
		background-color: transparent

img
	user-select: none


body
	overflow-x: hidden  // disallow horizontal scrolling with menu open
	max-width: 100%

//------------
// HYPHENATION
//------------

.hyphenate
	hyphens: auto
	-webkit-hyphens: auto
	-moz-hyphens: auto
	-ms-hyphens: auto

.donthyphenate,
blockquote p 
	hyphens: none !important
	-webkit-hyphens: none !important
	-moz-hyphens: none !important
	-ms-hyphens: none !important

html
	font-family: text
	font-weight: 500
	text-size-adjust: 100%
	height: 100%
	width: 100%
	min-height: 100%
	position: relative

main
	margin-bottom: 80px
	min-height: 70%

.site-wrapper
	overflow-y: scroll
	-webkit-overflow-scrolling: touch
	position: relative

iframe
	border:none

input:active,
input:focus,
a:active,
a:focus
	outline: none

.clearfix:after
	content: '.'
	display: block
	clear: both
	visibility: hidden
	line-height: 0
	height: 0

.clearfix
	display: inline-block

html[xmlns] .clearfix
	display: block

* html .clearfix
	height: 1%

span
	letter-spacing: none

body,
td
	font-family: text
	font-weight: 400
	font-size: 1.1em
	color: bw1
	text-rendering: optimizeLegibility
	-webkit-font-smoothing: antialiased
	background-color: white
	margin: 0
	background-color: bw10
	transition: opacity t0

@media (max-width: large-width)
	body
		font-size: 1.125em

@media (max-width: small-width)
	body
		font-size: .875em

.items
	margin: 0
	padding: 0


// --------------
// TEXT HIERARCHY
// --------------

h1,
h2,
h3,
h4,
h5,
h6,
h5,
h6
	font-family: headline
	font-weight: 700

h1
	font-size: 2em
	margin: .67em 0

h2
	font-size: 130%
	margin: 1.5em 0 .5em

h3,
h4,
h5,
h6
	font-weight: 700
	margin: 1em 0 .5em
	color: bw4

.text-body a
	text-decoration: none !important
	color: bw1
	word-break: break-word
	transition: box-shadow t0
	box-shadow: inset 0 -0.1em 0 0 bw7

.text-body a:hover
	box-shadow: inset 0 -0.1em 0 0 bw3

a
	color: bw1
	text-decoration: none

a:active,
a:hover
	outline: 0
	color: bw1

p
	font-size: 0.9em
	margin: 1em 0
	line-height: 1.4

b,
strong
	font-weight: 700

.center
	width: 100%
	clear: both
	display: block

.center-inner
	margin: 0 20%
	width: 60%

@media (max-width: small-width)
	.center-inner
		margin: 0 5%
		width: 90%

.text-body .txt
	margin: 0 auto

.center-inner .txt
	display: block
	max-width: 740px
	margin: 0.5em auto

.right
	width: 100%
	clear: both
	display: block
	position: relative

.right-inner
	float: right
	width: 60%
	margin: 0 35% 0 5%

.right-inner .txt
	display: block
	max-width: large-width
	margin: 0 0 0 20%

.left
	width: 100%
	clear: both
	display: block

.left-inner
	float: left
	width: 60%
	margin: 0 5% 0 35%

.left-inner .txt
	margin: 0 20% 0 0
	max-width: small-width

.list-wrap
	width: 100%
	max-width: small-width
	margin: 1em auto
	font-family: text
	z-index: 1

.list-wrap .single-content
	padding: 0 2em

@media (max-width: small-width)
	.list-wrap .single-content
		padding-bottom: 3.5em

.list-wrap .feat
	text-align: center
	border-bottom: 1px dotted bw9
	margin: 0 auto 3.5em

.list-wrap .feat a.popup
	display: inline-block
	position: relative
	top: 0.7em
	font-size: 100%
	text-align: center
	text-decoration: none
	padding: 0 1em

.list-wrap .date
	display: inline-block
	position: relative
	font-family: headline
	font-style: italic
	font-size: 85%
	text-align: center
	font-style: italic
	margin: 0 auto
	padding: 0 1em
	text-transform: none

.list-wrap h1.page-title
	font-size: 120%
	line-height: 135%
	font-family: headline
	font-weight: 700

.single-wrap
	width: 100%
	z-index: 1

.single-wrap .single-content
	padding: 0

@media (max-width: small-width)
	.single-wrap .single-content
		padding-bottom: 3.5em

.single-wrap .feat
	text-align: center

.single-wrap .feat a.popup
	display: inline-block
	position: relative
	top: 0.7em
	font-size: 130%
	text-align: center
	text-decoration: none
	padding: 0 1em

@media (max-width: small-width)
	.single-wrap .feat a.popup
		font-size: 150%

.single-wrap .share
	text-align: right

.single-wrap ul
	margin: 2em 0 0 1em
	list-style-type: circle

.single-wrap ul,
.single-wrap ol
	margin: 2em 0

.single-wrap ul li,
.single-wrap ol li
	margin-bottom: .5em

.single-wrap .block ul,
.single-wrap .block ol
	margin: 1em 0

.single-wrap .block ul li,
.single-wrap .block ol li
	margin-left: 1em
	padding-left: 0.3em
	font-size: 0.9em
	font-weight: 600

.init
	float: left
	margin: 5px 20px 0px 0px
	padding: 0px 18px 7px 18px
	font-size: 4.3em
	font-family: headline
	font-weight: 800
	color: bw1
	line-height: 1
	text-indent: 0
	background: white

p + .init
	text-indent: 0
	margin-top: 0

hr
	box-sizing: content-box
	height: 0

.spacer
	text-align: center
	margin: 20px auto 30px auto
	letter-spacing: 1em
	font-size: 0.8em

.div
	margin: 0 auto
	text-align: left


//-----------
// ANNOTATION
//-----------

sup
	top: -.4em
	font-size: 80%
	line-height: 0
	position: relative
	vertical-align: baseline
	padding-left: 0.1em

sub
	bottom: -.25em
	font-size: 75%
	line-height: 0
	position: relative
	vertical-align: baseline

// body anchor
.footnote-ref a
	text-decoration: none
	color: blue0
	padding: 0 0.2em
	font-weight: 500

// footnote anchor
.footnote-return
	text-decoration: none
	font-size: 90%
	font-weight: 700 !important
	top: -.1em !important
	line-height: 0
	position: relative
	vertical-align: baseline

.footnote-return a
	color: blue0 !important
	font-weight: 700 !important

.footnote-ref a,
.footnote-ref a:hover,
.footnote-return a,
.footnote-return a:hover
	box-shadow: none !important

.footnote-ref a:hover,
.footnote-return a:hover
	color: bw1 !important

.footnotes h3
	margin-top: 1.5em

.footnotes,
.footnotes a,
.footnotes ol li,
.footnotes ul li
	font-family: headline
	font-weight: 500
	color: bw1

.footnotes ol li p
	font-size: inherit
	margin: 0
	line-height: normal

.footnotes
	padding: 0
	font-size: 0.9em

.footnotes a
	color: bw1

.foot-hr
	margin-top: 1.5em
	border-style: solid
	border-color: bw1

.footnotes hr
	display: none

.footnotes ol,
.footnotes ul
	padding-left: 1em
	margin: 1em 0

.footnotes ol li,
.footnotes ul li
	padding-left: 0.2em

.footnotes ul li + li
	padding-top: 0.4em

ul li ul li
	margin-left: 2em
	list-style: square

legend
	border: 0
	padding: 0

.box
	margin: 10px
	font: 16px 'Courier New'
	background-color: white
	color: bw9
	margin: 5px 0 0 15px
	padding: 5px 10px
	width: auto

.caption
	font-size: 0.9em
	padding: 1em
	font-family: headline
	font-weight: 500
	color: bw5
	margin: 0 auto
	text-align: center

//------------
// UI ELEMENTS
//------------

.toggle
	font: 16px 'Courier New'
	color: bw6
	display: block
	margin-bottom: 5px
	padding: 5px 10px
	text-decoration: none

.toggle:hover
	text-decoration: underline

button,
input,
optgroup,
select,
textarea
	color: inherit
	font: inherit
	margin: 0

button
	overflow: visible

button,
select
	text-transform: none

button,
html input[type=button],
input[type=reset],
input[type=submit]
	-webkit-appearance: button
	cursor: pointer

button[disabled],
html input[disabled]
	cursor: default

button::-moz-focus-inner,
input::-moz-focus-inner
	border: 0
	padding: 0

input
	line-height: normal

input[type=checkbox],
input[type=radio]
	box-sizing: border-box
	padding: 0

input[type=number]::-webkit-inner-spin-button,
input[type=number]::-webkit-outer-spin-button
	height: auto

input[type=search]
	-webkit-appearance: textfield
	-moz-box-sizing: content-box
	-webkit-box-sizing: content-box
	box-sizing: content-box

input[type=search]::-webkit-search-cancel-button,
input[type=search]::-webkit-search-decoration
	-webkit-appearance: none

input:-webkit-autofill
	background-color: white !important

fieldset
	border: 1px solid silver
	margin: 0 2px
	padding: .35em .625em .75em

textarea
	overflow: auto

optgroup
	font-weight: 700

table
	border-collapse: collapse
	border-spacing: 0

td,
th
	padding: 0

footer
	padding: 2em
	width: 100%
	bottom: 0
	left: 0
	text-align: center

	.social-link
		color: bw9
		text-decoration: none
		display: inline
		margin: 0 1em

::after,
::before
	box-sizing: border-box

small
	font-size: 60%

li
	font-size: 0.9em
	font-family: text
	font-weight: 500


//--------------
// PAGE ELEMENTS
//--------------

.single-wrap
	.block
		font-size: 1em
		font-family: headline
		font-weight: 600
		color: bw1
		border-left: 10px solid bw1
		padding: 0 0 0 1.4em
		margin: 1.1em 0 1.1em 0
		line-height: 1.5em

		p
			margin: 0.5em 0 0.5em 0
			line-height: 155%
			padding-left: 0 !important
			padding-right: 0 !important

		p + p
			margin: 0.8em 0 0.5em 0

.block-inner
	line-height: 165%
	text-align: right

	p
		margin-top: 0.5em

@media (max-width: large-width)
	.single-wrap .block
		margin-left: 0


blockquote
	font-size: 1.8em
	font-family: headline
	font-weight: 800
	padding: 0 0 0 0
	margin: 1em 5% 1.5em 5%
	color: rgba(0, 0, 0, 0)
	text-stroke: 1px bw1

	p
		margin: 0
		line-height: 1.5em

#prev,
#next
	text-decoration: none
	border: 1px solid bw1
	padding: 10px
	line-height: 1
	border-radius: 25px
	bottom: 40px
	color: bw1
	display: inline-block
	border-radius: 0
	width 150px
	font-weight: 600
	font-size: 1em
	display: none

	&:active
		border-color: bw5

	span
		font-weight: 600
		font-size: 1em
		display: inline-block

#prev
	align: left
	left: 40px
	margin-left: 20px

#next
	align: right
	right: 40px
	margin-right: 20px

.pagination
	overflow: hidden
	margin-top: 40px
	color: bw8
	text-align: center
	border: 1px solid bw9

	a,span
		box-sizing: border-box
		float: left
		width: 50%
		padding: 20px
		text-decoration: none

		&:first-child
			text-decoration: none
			border-right: 1px solid bw9

.item-title
	margin 2em 0 0 4em
