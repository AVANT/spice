@media (max-width: large-width)
	.tab-content
		#network-tab ul
			columns: 2

@media (max-width: medium-width)
	.tab-content
		#network-tab ul
			columns: 1

@media (max-width: small-width)
	.tabs
		a,
		span,
		p,
		li
			font-size: f14

		.tab-links .tab-link a h3
				font-size: f17

		.tab-content h3
			font-size: f15

