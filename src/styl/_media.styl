figure
	position: relative
	font-weight: normal
	display: inline-block

	img 
		display: block

	figcaption
		top: 100%
		position: relative

.single-figure
	width: 100%
	margin: 0 auto
	display: block

.sigle-img-wrapper,
.list-img-wrapper
	position: relative
	height: 0

.list-cover,
.figure
	position: absolute
	top: 0
	left: 0
	width: 100%
	height: 100%


//---------
// DEFAULTS
//---------

audio, canvas, progress, video
	display: inline-block
	vertical-align: baseline

audio:not([controls])
	display: none
	height: 0


//-----------
// GALLIERIES
//-----------

.gallery
	margin-bottom: 2em
	background: none
	padding: 25px 0px 35px 0px
	overflow-x: hidden
	overflow-y: hidden

	.gallery-cell
		width: 66%
		margin-right: 10px
		background: bw10
		position: relative
		top: 50%
		transform: translateY(-50%) !important

		.gallery-cell-image
			display: block
			margin: 0 auto
			max-width: 100%
			opacity: 0
			transition: opacity 0.4s ease-in

			&.flickity-lazyloaded,
			&.flickity-lazyerror
				opacity: 1  // fade in lazy loaded image

	.flickity-page-dots  // gallery controls
		bottom: -30px !important

		.dot
			width: 6px !important
			height: 6px !important
			opacity: 1
			background: bw6
			border-radius: 0 !important
			border: none
			margin: 0 14px !important

			&.is-selected
				background: bw2

	.flickity-prev-next-button
		background: none !important
		height: 60px !important
		width: 60px !important
		top: 48% !important

		.arrow
			fill: white !important
			opacity: 0.5
			user-select: none

		svg
			height: 120% !important
			width: 120% !important
			top: -5% !important
			left: 0 !important


//-------------
// LAZY LOADING
//-------------

.list-cover
	width: 95%
	display: block
	margin: 0 auto
	height: auto

	img
		width: 600px
		z-index: 2

.b-lazy
	opacity: 0
	margin-top: -10px

	&.b-loaded
		margin-top: 0px

@media (max-width: small-width)
	.list-cover
		width: 100%

//------------
// SOUND & IMG
//------------

.media-box
	margin: 0 auto
	padding:  0em 0 0.5em 0
	display: block
	width: 100%

.audio-box
	margin: 1.5em 0 2.5em !important

audio,
audio.b-lazy.b-loaded,
video
	-webkit-appearance:none
	margin: 1em auto 0.5em auto

	&::-webkit-progress-value
		background: blue0

	&::-webkit-media-controls-panel
		background: none

	&::-webkit-media-controls-play-button
