figure
	position: relative
	font-weight: normal
	display: inline-block

	img 
		display: block

	figcaption
		top: 100%
		position: relative
		padding-top: 0.5rem
		max-width: inherit !important

		*
			max-width: inherit !important

.single-figure
	width: 100%
	margin: 0 auto
	display: block
	max-width: inherit

.sigle-img-wrapper,
.list-img-wrapper
	position: relative
	height: 0

.figure
	position: absolute
	top: 0
	left: 0
	width: 100%
	height: 100%


//---------
// DEFAULTS
//---------

audio, canvas, progress, video
	display: inline-block
	vertical-align: baseline

audio:not([controls])
	display: none
	height: 0


//-----------
// GALLIERIES
//-----------

main
	.gallery
		margin-bottom: 2em
		background: none
		padding: 25px 0px 35px 0px
		overflow-x: hidden
		overflow-y: hidden

		.gallery-cell
			width: 66%
			margin-right: 10px
			background: bw10
			position: relative
			top: 50%
			transform: translateY(-50%) !important

			.caption
				text-align: center
				color: bw1

			.gallery-cell-image
				display: block
				margin: 0 auto
				max-width: 100%
				opacity: 0
				transition: opacity 0.4s ease-in

				&.flickity-lazyloaded,
				&.flickity-lazyerror
					opacity: 1  // fade in lazy loaded image

		.flickity-page-dots  // gallery controls
			bottom: -30px !important

			.dot
				width: 6px !important
				height: 6px !important
				opacity: 1
				background: bw6
				border-radius: 0 !important
				border: none
				margin: 0 14px !important

				&.is-selected
					background: bw2

		.flickity-prev-next-button
			background: none !important
			height: 60px !important
			width: 60px !important
			top: 48% !important

			.arrow
				fill: white !important
				opacity: 0.5
				user-select: none

			svg
				height: 120% !important
				width: 120% !important
				top: -5% !important
				left: 0 !important


//-------------
// LAZY LOADING
//-------------

.list-cover
	width: 100%
	display: block
	margin: 0 auto
	height: auto

	img
		width: 600px
		z-index: 2

.b-lazy
	opacity: 0
	margin-top: -10px

	&.b-loaded
		margin-top: 0px

//------------
// SOUND & IMG
//------------

.media-box
	margin: 3.5rem auto 3rem auto
	padding:  0em 0 0.5em 0
	display: block
	width: 100%

.audio-box
	margin: 2rem auto

audio,
audio.b-lazy.b-loaded,
video
	-webkit-appearance:none
	margin: 1em auto 0.5em auto
	width: 100%

	&::-webkit-progress-value
		background: blue0

	&::-webkit-media-controls-panel
		background: none

	&::-webkit-media-controls-play-button
		color: bw1

	&::-webkit-media-controls-current-time-display
		color: bw4

	&::-webkit-media-controls-time-remaining-display
		color: bw4

audio
	display: block
	margin-top: 3.5rem !important

.media-box-inner
	display: block
	margin: 0 auto
	max-width: inherit

.single-video
	display: block
	margin: 0 auto
	max-width: inherit

.img-box p
	margin-bottom: 0

.video-container,
.soundcloud-container
	border:none
	margin:0 auto
	display: absolute
	height: auto
	width: auto

.video-container
	position: relative
	padding-bottom: 53%  // 16:9
	padding-top: 25px
	height: 0

	iframe
		position: absolute
		top: 0
		left: 0
		width: 100%
		height: 100%

.soundcloud-container iframe
	width:100%

.img,
.audio
	margin: 0 auto
	display: block

.audio
	padding-top: 0.5em

.img-right-left
	float: left
	margin-right: 2.5em
	margin-top: 0.5em

svg:not(:root)
	overflow: hidden

.media-text p
	font-size: f15
	padding: 1em 1em 0 1em
	font-family: programm
	font-weight: 400
	color: bw1
	margin: 0 auto

	&:empty
		display: none

.single .img-box
	width: 100%
	max-width: none
	height: 0
	position: relative
	margin: 0 auto

	img
		width: 100%
		height: auto
		max-width: none


