.gallery {
  background: #FAFAFA;
}

.gallery-cell {
  width: 66%;
  height: 400px;
  margin-right: 10px;
  background: #333;
}

.gallery-cell-image {
  display: block;
  max-height: 100%;
  margin: 0 auto;
  max-width: 100%;
  opacity: 0;
  -webkit-transition: opacity 0.4s;
          transition: opacity 0.4s;
}

/* fade in lazy loaded image */
.gallery-cell-image.flickity-lazyloaded,
.gallery-cell-image.flickity-lazyerror {
  opacity: 1;
}


//-------------
// LAZY LOADING
//-------------

.b-lazy
	-webkit-transition: opacity 400ms ease-in-out
	-moz-transition: opacity 400ms ease-in-out
	-o-transition: opacity 400ms ease-in-out
	transition: opacity 400ms ease-in-out
	max-width: 100%
	opacity: 0
.b-lazy.b-loaded
	opacity: 1

.soundcloud-box,
.video-box,
.img-box
	margin: 0em 0 1.3em 0

.img-box p
	margin-bottom: 0

.video-container,
.soundcloud-containe
	border:none
	margin:0 auto

.video-container
	position: relative
	padding-bottom: 55%  // 16:9
	padding-top: 25px
	height: 0
.video-container iframe
	position: absolute
	top: 0
	left: 0
	width: 100%
	height: 100%

.soundcloud-container iframe
	width:100%
	height: 450px

.img
	margin: 0 auto
	padding-top: 0.5em
	display: block

.img-right-left
	float: left
	margin-right: 2.5em
	margin-top: 0.5em

svg:not(:root)
	overflow: hidden

.soundcloud-text,
.video-text,
.img-text
	font-size: 0.8em
	font-family: 'Tiempos Headline', Georgia, serif
	font-weight: 600
	color: bw5
	margin: 0 auto

.single-wrap img
	width: 100%
	height: 100%

// cover images
.cover
	-webkit-background-size: cover
	-moz-background-size: cover
	-o-background-size: cover
	background-size: cover
	background-repeat: no-repeat
	background-position: center center 
