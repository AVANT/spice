// --------------
// LOAD INDICATOR
// --------------

.pace
   pointer-events: none
   user-select: none

.pace-inactive
   display: none
   transition: all 0.2s ease

.pace .pace-progress
   background: #2946b6
   box-shadow: 0px 0px 2px #6666ff
   height: 1px
   position: fixed
   right: 100%
   top: 0
   transition: all 0.5s cubic-bezier(0.75, 0.20, 0.20, 0.75)
   width: 100%
   z-index: 2000

.pace .pace-progress:after
   transition: all 0.5s cubic-bezier(0.75, 0.20, 0.20, 0.75)


// -----------
// PAGE REVEAL
// -----------

.site-wrapper

   opacity: 0
   top: 0
   left: 0
   width: 100%
   transition: all 0.2s ease
   height: 100%

.load
   opacity: 1

@keyframes fadein
   from
      opacity: 0
   to
      opacity: 1
