//---------------
// LOAD INDICATOR
//---------------

.pace
	user-select: none
	pointer-events: none

.pace-inactive
	display: none
	transition: all 0.2s ease

.pace .pace-progress
	background: #2946b6
	position: fixed
	z-index: 2000
	top: 0
	right: 100%
	width: 100%
	height: 1px
	box-shadow: 0px 0px 2px #6666ff
	transition: all 0.5s cubic-bezier(0.75, 0.20, 0.20, 0.75)

.pace .pace-progress:after
	transition: all 0.5s cubic-bezier(0.75, 0.20, 0.20, 0.75)


//------------
// PAGE REVEAL
//------------

.site-wrapper
	position: absolute
	opacity: 0
	top: 0
	left: 0
	width: 100%
	transition: all 0.2s ease
	height: 100%

.load
	opacity: 1

@keyframes fadein
	from
		opacity: 0
	to
		opacity: 1
