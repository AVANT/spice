
.taxonomy-list
	margin: 0 0 5em 5.5em
	min-height: 60%

	.multi-col
		column-count: 4

		li
			.title
				font-size: 2em
				color: bw5

			ul
				margin: 1 0 1.5em 0
				padding-top: 0
				list-style: inside none

				li
					display: block
					-webkit-column-break-inside: avoid
					column-break-inside: avoid
					page-break-inside: avoid

	ul
		margin-top: 20px
		padding-top: 3em

		li
			list-style-type: none

			a
				font-weight: 600
				font-family: headline
				transition: color t0

				&:hover
					color: bw5

			span
				font-weight: 500
				font-family: headline
				font-size: 0.8em
				color: bw5

@media (max-width: large-width)
	.taxonomy-list ul
		padding-top: 4em

	.taxonomy-list .multi-col
		column-count: 2

@media (max-width: small-width)
	.taxonomy-list .multi-col
		column-count: 1