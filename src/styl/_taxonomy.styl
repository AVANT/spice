
.taxonomy-list
	margin: 0 0 5em 5.5em
	min-height: 60%

	.multi-col
		column-count: 4

		ul
			margin: 1 0 1.5em 0
			padding-top: 0
			list-style: inside none
			column-break-inside: avoid
			page-break-inside: avoid
			column-fill: balance
			display: inline-block
			width: 100%

			.letter-title
				font-size: 2em
				color: bw4

			li
				display: block
				white-space: nowrap

				a,
				span
					whitespace: nowrap

	ul
		margin-top: 20px
		padding-top: 3em

		li
			list-style-type: none

			a
				font-weight: 600
				font-family: headline
				transition: color t0

				&:hover
					color: bw4

			span
				font-weight: 500
				font-family: headline
				font-size: 0.8em
				color: bw4

@media (max-width: large-width)
	.taxonomy-list ul
		padding-top: 4em

	.taxonomy-list .multi-col
		column-count: 2

@media (max-width: medium-width)
	.taxonomy-list .multi-col
		column-count: 1